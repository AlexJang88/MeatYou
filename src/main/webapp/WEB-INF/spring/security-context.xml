<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="customLoginSuccess" class="com.gogi.meatyou.security.CustomLoginHandler" />
	<bean id="userService" class="com.gogi.meatyou.security.CustomUserDetailsService"  />
	<bean id="noopPw" class="com.gogi.meatyou.security.CustomNoopPasswordEncoder"/>
	<!-- <bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"  /> -->
	
	
	<security:http>
		<security:intercept-url pattern="/main/main" access="permitAll" />
		<security:intercept-url pattern="/main/main" access="hasRole('ROLE_MEMBER')" />
		<security:intercept-url pattern="/main/main" access="hasRole('ROLE_ADMIN')" />
		<security:intercept-url pattern="/admin/main" access="hasRole('ROLE_ADMIN')" />
		<!-- 필수항목 -->
		
		<security:form-login login-page="/admin/customLogin" authentication-success-handler-ref="customLoginSuccess" />
		<security:logout invalidate-session="true" logout-url="/sample/customLogout" delete-cookies="remember-me" />
		<security:remember-me data-source-ref="dataSource" token-validity-seconds="172800"/>
		
		<!-- 접근 권한 없는 URI 접근시 에러페이지 설정 -->
		<security:access-denied-handler error-page="/admin/accessError" />
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userService">
			<!-- <security:password-encoder ref="bcryptPasswordEncoder" /> -->
			<security:password-encoder ref="noopPw" />
		</security:authentication-provider>
	</security:authentication-manager>
		
</beans>
